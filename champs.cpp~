#include "clas.hpp"
#include <ctime>
#include <cstdlib>
#include <iostream>

Champ::Champ(int choice, char tab[])
{
	skills= new char[1];

	skills[0] = static_cast<char>(choice);

	if(sizeof(tab)==7) WarriorCr();
	else if(sizeof(tab)==4) MageCr();
	else if(sizeof(tab)==5) RogueCr();
	else if(sizeof(tab)==6) KnightCr();

}
Champ::Champ(Champ & basic) :

	str(basic.str), stm (basic.stm),
	level(basic.level), dex(basic.dex),
	wisd(basic.wisd), HP(basic.HP), 
	MP(basic.MP), deff(basic.deff)
{
	skills = new char[5];


}

Champ::~Champ()
{
	
}
void Champ::KnightCr()
{
	srand(time(NULL));
	
	level=1;

	stm = 2+rand()%2+1+(rand()%1+10)/10;
	str = 3+rand()%3-1+(rand()%1+100)/100;
	dex = 2+rand()%3-1+(rand()%1+100)/100;
	wisd = 2+rand()%3-1+(rand()%1+100)/100;
	
}
void Champ::MageCr()
{
	srand(time(NULL));
	
	level=1;

	wisd = 2+rand()%2+1+(rand()%1+10)/10;
	dex = 3+rand()%3-1+(rand()%1+100)/100;
	str = 2+rand()%3-1+(rand()%1+100)/100;
	stm = 2+rand()%3-1+(rand()%1+100)/100;
	
}
void Champ::RogueCr()
{
	srand(time(NULL));
	
	level=1;

	dex = 2+rand()%2+1+(rand()%1+10)/10;
	str = 3+rand()%3-1+(rand()%1+100)/100;
	wisd = 2+rand()%3-1+(rand()%1+100)/100;
	stm = 2+rand()%3-1+(rand()%1+100)/100;
	
}
void Champ::WarriorCr()
{
	srand(time(NULL));
	
	level=1;

	str = 2+rand()%2+1+(rand()%1+10)/10;
	stm = 3+rand()%3-1+(rand()%1+100)/100;
	dex = 2+rand()%3-1+(rand()%1+100)/100;
	wisd = 2+rand()%3-1+(rand()%1+100)/100;
}	

std::ostream& operator<<(std::ostream& out, Champ s)
{
	out<<"Wybrana PostaÄ‡: "<<s.guild<<"Posiada: \n"<<
		s.str<<"Sily\n"<<s.stm<<"wytrzymalosci \n	"<<s.dex<<"Zrecznosci\n"<<s.wisd<<"Madrosci \n"<<s.deff<<"obrony \n"<<s.MP<<"Many\n"<<s.HP<<"Zycia\n";

return out;
}
